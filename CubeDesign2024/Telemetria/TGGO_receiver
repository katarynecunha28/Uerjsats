#include <SPI.h>
#include <LoRa.h>

#define SCK 5
#define MISO 19
#define MOSI 27
#define SS 18
#define RST 14
#define DIO0 26
#define BAND 915E6
#define meuEndereco 42  // Escolha um valor que seja Ãºnico para o seu dispositivo

void setup() {
  Serial.begin(9600);

  SPI.begin(SCK, MISO, MOSI, SS);
  LoRa.setPins(SS, RST, DIO0);

  if (!LoRa.begin(BAND)) {
    Serial.println("Starting LoRa failed!");
    while (1);
  }
  Serial.println("LoRa Initializing OK!");
}

void loop() {
  if (Serial.available() > 0) {
    String comando = Serial.readStringUntil('\n');
    enviarComando(comando, meuEndereco);
  }
}

void enviarComando(String comando, int address) {
  LoRa.beginPacket();
  LoRa.write(address);
  LoRa.print(comando);
  LoRa.endPacket();

  Serial.println("Comando enviado: " + comando);

  int timeout = 10000;  // Tempo limite em milissegundos
  unsigned long startTime = millis();

  while (millis() - startTime < timeout) {
    int packetSize = LoRa.parsePacket();
    if (packetSize) {
      int senderAddress = LoRa.read();
      if (senderAddress == address) {
        String resposta = LoRa.readString();

        Serial.println("Resposta do Receiver: " + resposta);


        return;
      }
    }
  }

  Serial.println("Timeout: Nenhuma resposta do Receiver.");
}
